#!/bin/bash

layout=""
capacity=""
timedate=""

get_layout() {
kb=$(xset -q | grep -oP '\d{8}')

  case $kb in
    "00001000")
    layout="ru"
    ;;
    "00000000")
    layout="en"
    ;;
  esac
}

battery() {
    capacity="$(cat /sys/class/power_supply/BAT0/capacity)%"
}

timedate() {
    timedate=$(timedatectl | awk '/Local time:/ {print $3, $4, $5, $6, $7}')
}

i3status | while :
do
  read line
  get_layout
  battery
  timedate
  echo "$layout | $capacity | $timedate | $line" || exit 1
done
